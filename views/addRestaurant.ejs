<body class="lato-regular">
    <%- include ('partials/navbar.ejs') %>
    <div class="container mt-3">
        <h2>Add Restaurant</h2>
        <p>Add a restaurant to our website!</p>

        <!-- code for form tag to add new restaurant -->
        <form action="/restaurants" method="POST" enctype="multipart/form-data">
            <div class="mb-3 mt-3">
                <label for="name">Restaurant Name:</label>
                <input type="text" class="form-control" id="name" placeholder="Enter restaurant name" name="name" style="width: 50%;" required>
            </div>
            <div class="mb-3 mt-3">
                <label for="type">Type:</label>
                <input type="text" class="form-control" id="type" placeholder="Enter type of restaurant" name="type" style="width: 50%;" required>
            </div>
            <div class="mb-3 mt-3">
                <label for="name">Description:</label><br>
                <textarea id="description" name="description" rows="4" cols="50" placeholder="Enter description of the restaurant"></textarea>
            </div>
            <div class="mb-3 mt-3">
                <label for="type">Address:</label>
                <input type="text" class="form-control" id="address" placeholder="Enter the restaurants' address/location" name="address" style="width: 50%;" required>
            </div>
            <div class="mb-3 mt-3">
                <label for="type">Image:</label><br>
                <input type="file" id="image" name="image" accept="image/*" required>
            </div>
            
            
            <div class="mb-3 mt-3">
                <label for="type">Price Range: </label>
                <p>(Above/Under/Around) this price</p>
                <select class="form-select sidebyside" id="priceindicator" name="priceindicator" style="width: 20%;">
                    <option value="Above">Above</option>
                    <option value="Under">Under</option>
                    <option value="Around">Around</option>
                </select>
                <input type="number" style="width: 20%" class="form-control sidebyside" id="pricerange" placeholder="Enter price range" name="pricerange">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</body>
</html>