<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <title>Restauropedia</title>

    
    <%- include ('partials/fonts_html.ejs') %>
    <%- include ('partials/fonts_css.ejs') %>
    
    <%- include ('partials/banner.ejs') %>
        <div id="banner">
            <div id="banner-content" class="orelega-one-regular">
                <p>Restauropedia</p>
            </div>
        </div>
        <div id="main-content">
            <p>This text is only here to load the main banner</p>
        </div>
        
        <%- include ('partials/style.ejs') %>
</head>
<body class="lato-regular">
    <%- include ('partials/navbar.ejs') %>
    <div class="container mt-3">
        <h2>Add Review</h2>
        <p>Add a review to <%= restaurant.name %> </p>

        <!-- Form tag to add new review -->
        <form action="/restaurants/<%= restaurant.id %>/addReviewForm" method="POST">
            <div class="mb-3 mt-3">
                <label for="reviewername">Reviewer Name</label>
                <input type="text" class="form-control" id="reviewername" placeholder="Your name" name="reviewername" style="width: 20%;">
            </div>
            <div class="mb-3 mt-3">
                <label for="reviewrating">Rating: <span id="rangeSlider"></span></label>
                <input type="range" min="0" max="5" step="0.1" class="slider" id="reviewrating" name="reviewrating">
            </div>
            
            <div class="mb-3 mt-3">
                <label for="reviewtitle">Title</label>
                <input type="text" class="form-control" placeholder="Enter review title" min="0" max="5" step="0.1" class="slider" id="reviewtitle" name="reviewtitle" style="width: 20%;">
            </div>
            <div class="mb-3 mt-3">
                <label for="reviewdescription">Description</label>
                <br>
                <textarea id="reviewdescription" name="reviewdescription" rows="4" cols="50" placeholder="Enter review description" style="width: 50%;"></textarea>
            </div>
            <div class="mb-3 mt-3">
                <label for="reviewdate">Date Reviewed</label>
                <input type="date" class="form-control" id="reviewdate" name="reviewdate" style="width: 40%;">
            </div>
            <button type="submit" class="btn btn-primary">Submit Review</button>
        </form>
        
        <br>
        <a class="otherbuttons" href="/restaurants/<%= restaurant.id %>/reviews">Back to Reviews</a>
    </div>

    <script>
        var slider = document.getElementById("reviewrating");
        var output = document.getElementById("rangeSlider");
        output.innerHTML = slider.value;
        
        slider.oninput = function() {
          output.innerHTML = this.value;
        }
    </script>
</body>
</html>