<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <title>Restauropedia</title>
    
    
    <%- include ('partials/fonts_html.ejs') %>
    <%- include ('partials/fonts_css.ejs') %>

    <%- include ('partials/banner.ejs') %>
        <div id="banner">
            <div id="banner-content" class="orelega-one-regular">
                <p>Restauropedia</p>
            </div>
        </div>
        <div id="main-content">
            <p>This text is only here to load the main banner</p>
        </div>

        <%- include ('partials/style.ejs') %>
</head>

<body class="lato-regular">
    <%- include ('partials/navbar.ejs') %>
    <div class="container mt-3">
        <div id="headerrr">
        <h2>Restauropedia</h2>      
        <p>Add more restaurants <a href="/addRestaurantForm">here</a>! </p>

        </div>

        <table class="table table-striped table-bordered table-hover"   >
            <thead class="table-dark">
                <tr>
                    <th>Restaurant ID</th>
                    <th>Restaurant Name</th>
                    <th>Type of Restaurant</th>
                </tr>
            </thead>
            <tbody>
                <!-- code to display the restaurants information by looping through the array -->
                <% if (restaurants.length > 0) { %>
                    <% for (let i = 0; i < restaurants.length; i++) { %>
                        <tr>
                            <td><%= restaurants[i].id %></td>
                            <td><a href="/restaurants/<%= restaurants[i].id %>">
                                <%= restaurants[i].name %></a></td>
                            <td><%= restaurants[i].type %></td>
                        </tr>
                    <% } %>

                <% } else { %>
                    <tr>
                        <td colspan="3" style="text-align: center;">No results found</td>
                    </tr>
                <% } %>
            </tbody>

        </table>
    </div>

</body>
</html>