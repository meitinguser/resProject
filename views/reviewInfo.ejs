<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <title>Restauropedia</title>

    
    <%- include ('partials/fonts_html.ejs') %>
    <%- include ('partials/fonts_css.ejs') %>

    <%- include ('partials/banner.ejs') %>
        <div id="banner">
            <div id="banner-content" class="orelega-one-regular">
                <p>Restauropedia</p>
            </div>
        </div>
        <div id="main-content">
            <p>This text is only here to load the main banner</p>
        </div>

        <%- include ('partials/style.ejs') %>
</head>
<body class="lato-regular">
    <%- include ('partials/navbar.ejs') %>
    <div class="container mt-3">
            <div class="mb-3 mt-3">
            <h2><%= review.reviewtitle %></h2>

            <div class="mb-3 mt-3">
                <label for="reviewerName">Rating:</label>
                <%= review.reviewrating %>
                
            </div>

            <hr>

            <div class="mb-3 mt-3">
                <table class="" style="width: 30%">
                    <thead>
                        <tr>
                            <th>Reviewer Name</th>
                            <th>Date Reviewed</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td><p><%= review.reviewername %></p></td>
                            <td><p><%= review.reviewdate.toDateString() %></p></td>
                        </tr>
                    </tbody>
            </table>
            </div>

            <div class="mb-3 mt-3">
                <label for="reviewDescription">Review Description</label>
                
                <p style="width: 60%"><%= review.reviewdescription %></p>
                
            </div>
            
            <a class="otherbuttons" href="/restaurants/<%= review.restaurantId %>/reviews">Back</a>
            <a class="otherbuttons" href="/restaurants/<%= review.restaurantId %>/reviews/<%= review.id %>/update">Update Review</a>
            <a class="otherbuttons" style="background-color: #d9534f; color: white;" href="/restaurants/<%= review.restaurantId %>/reviews/<%= review.id %>/delete"onclick="return confirm('Are you sure you want to delete this review?')">Delete Review</a>
    </div>
</body>
</html>