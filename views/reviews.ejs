<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <title>Restauropedia</title>

    
    <%- include ('partials/fonts_html.ejs') %>
    <%- include ('partials/fonts_css.ejs') %>

    <%- include ('partials/banner.ejs') %>
        <div id="banner">
            <div id="banner-content" class="orelega-one-regular">
                <p>Restauropedia</p>
            </div>
        </div>
        <div id="main-content">
            <p>This text is only here to load the main banner</p>
        </div>

        <%- include ('partials/style.ejs') %>
</head>
<body class="lato-regular">
    <%- include ('partials/navbar.ejs') %>
    
    <div class="container mt-3">
    <div id="headerrr">
    
    <h2>Reviews for <%= restaurant.name %></h2>

    <table class="table table-striped table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>Review</th>
                <th>Rating</th>
                <th>Reviewer Name</th>
            </tr>
        </thead>

        <tbody>
            <% if (reviews.length > 0) { %>
                <% for (let i = 0; i < reviews.length; i++) { %>
                    <tr>
                        <td><a href="/restaurants/<%= restaurant.id %>/reviews/<%= reviews[i].id %>"><%= reviews[i].reviewtitle %></td>
                        <td><%= reviews[i].reviewrating %></td>
                        <td><%= reviews[i].reviewername %></td>
                        
                    </tr>
                <% } %>
            <% } else { %>
                <tr>
                    <td colspan="4">No reviews found</td>
                </tr>
            <% } %>
        </tbody>
    </table>
    </div>
    
    <a class="otherbuttons" href="/restaurants/<%= restaurant.id %>">Back to Restaurants</a>
    <a class="buttons" href="/restaurants/<%= restaurant.id %>/addReviewForm">Add Review</a>
    </div>
</body>
</html>
